.brand-item{
  background-color: #fff;
}

.brand-item view {
  display: block;
}

.brand-item > text {
  display: block;
 color:#666666;
  background:#fafafa;
  font-size: 34rpx;
  height: 60rpx;
  line-height: 60rpx;
